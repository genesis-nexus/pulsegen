# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pulsegen

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key (Required for encrypting API keys and sensitive data)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-change-in-production

# AI Provider API Keys (Optional - can be configured per-user in UI)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Email Configuration (Optional - can be configured in SMTP settings UI)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@pulsegen.com

# SSO/OAuth Configuration (Optional - configure in Identity Provider settings UI)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Tools Configuration (Optional - configure in AI Tools settings UI)
# MindsDB Cloud
MINDSDB_ENDPOINT=https://cloud.mindsdb.com
MINDSDB_API_KEY=
# Or use email/password authentication
MINDSDB_EMAIL=
MINDSDB_PASSWORD=
MINDSDB_DATABASE=mindsdb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760

# Admin User (Created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# License Enforcement (Optional - can toggle in Platform Settings UI)
# Set to 'true' to require license key, 'false' for free mode
LICENSE_ENFORCED=false

# Analytics (Optional - configure in Platform Settings UI)
# Google Analytics 4 Measurement ID
GOOGLE_ANALYTICS_ID=

# Remote Configuration (Recommended for Production)
# Fetch configuration from private Git repository
# This allows centralized control of licensing and features across all instances
# See REMOTE_CONFIG_GUIDE.md for setup instructions

# GitHub Configuration (Primary Method)
REMOTE_CONFIG_REPO=genesis-nexus/pulsegen-config
REMOTE_CONFIG_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REMOTE_CONFIG_FILE=config.json
REMOTE_CONFIG_BRANCH=main

# GitLab Configuration (Alternative)
# REMOTE_CONFIG_GITLAB_PROJECT_ID=12345678
# REMOTE_CONFIG_GITLAB_TOKEN=glpat-xxxxxxxxxxxxx

# Raw URL Configuration (Alternative - for other Git hosts)
# REMOTE_CONFIG_RAW_URL=https://raw.githubusercontent.com/user/repo/main/config.json

# Configuration Refresh
CONFIG_REFRESH_INTERVAL_MS=300000  # 5 minutes (default)

# Instance Identification (for instance-specific config)
# INSTANCE_ID=production  # Set to production, staging, development, or customer-specific ID
